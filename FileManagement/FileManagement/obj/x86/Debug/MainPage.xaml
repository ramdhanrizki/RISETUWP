<Page
    x:Class="FileManagement.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FileManagement"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:ConnectionId='1' x:Name="readFile" Content="Baca File"
                HorizontalAlignment="Left" Margin="150,358,0,0"
                VerticalAlignment="Top" Height="37" Width="111"
                                       />

        <TextBox x:ConnectionId='2' x:FieldModifier="public" x:Name="textBox"
                   HorizontalAlignment="Left" Margin="49,55,0,0" TextWrapping="Wrap"
                   VerticalAlignment="Top" Height="276" Width="1183" />

        <Button x:ConnectionId='3' x:Name="writeFile" Content="Simpan"
                HorizontalAlignment="Left" Margin="49,356,0,0"
                VerticalAlignment="Top"                         Height="37" Width="79" />

        <TextBlock x:ConnectionId='4' x:Name="textBlock" HorizontalAlignment="Left"
                    Margin = "49,444,0,0" TextWrapping = "Wrap" 
                   VerticalAlignment="Top" Height="218" Width="1183"
                   Foreground="#FF6231CD" />
        <TextBlock x:ConnectionId='5' x:Name="textBlock1" HorizontalAlignment="Left" Margin="49,412,0,0" TextWrapping="Wrap" Text="Isi dari FIle : " VerticalAlignment="Top"/>
    </Grid>
</Page>

